doctype html
head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible' content='ie=edge')
    title Home Page
    link(rel='icon' href='./static/images/logo.png' type='image/x-icon')
    link(rel='stylesheet' href='./static/stylesheets/style.css')
    link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css')
nav.navbar.navbar-expand-lg.navbar-light.bg-light.sticky-top
    a.ml-5(href='./')
        img(src='./static/images/logo.png' alt='logo')
    button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
    #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.m-auto
            li.nav-item.active
                a.nav-link.px-3.border.border-success.rounded-pill.m-2.text-center(href='./')
                    strong
                        | HOME
                    span.sr-only (current)
            li.nav-item.active
                a.nav-link.px-3.border.border-success.rounded-pill.m-2.text-center(href='./cards')
                    strong CARDS 
                    span.sr-only (current)
            li.nav-item.active
                a.nav-link.px-3.border.border-success.rounded-pill.m-2.text-center(href='./login')
                    strong
                        | LOGIN
                    span.sr-only (current)
            li.nav-item.active
                a.nav-link.px-3.border.border-success.rounded-pill.m-2.text-center(href='./register')
                    strong
                        | REGISTER
                    span.sr-only (current)
        form.form-inline.my-2.my-lg-0.d-flex.justify-content-center
            input.form-control.mr-sm-2(type='search' placeholder='Search' aria-label='Search')
            button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search
block head
script(src='https://code.jquery.com/jquery-3.4.1.slim.min.js')
script(src='https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js')
script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js')
block footer